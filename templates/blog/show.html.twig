{% extends 'base.html.twig' %}

{% block body %}

    <div>
        <h1>Real article s title : {{ article.title }}</h1>
        <h2>Category : {{ article.category.name }}</h2>
        <p>{{ article.content }}</p>
        <h2>Auteur: {{ article.author.username }}</h2>
    </div>
    <strong>Tags :</strong>
    <ul>
        {% for tag in article.tags %}
            <li><a href="{{ path('show_tag', { 'name': tag.name} )  }}">{{ tag.name}}</a></li>
        {% else %}
            <li>No tags for this article</li>
        {% endfor %}
    </ul>
{% endblock %}