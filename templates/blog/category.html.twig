{% extends 'base.html.twig' %}

{% block body %}

    <div>
        <h1>Articles dans la catégorie {{ category.name }}</h1>
<p> Afficher ici les 3 derniers articles de la catégorie {{ category.name }}</p>
        <ul>
            {% for article in articles %}
                <li>{{ article.id }} : {{ article.title }}</li>
                <p>{{ article.content }}</p>
            {% endfor %}
        </ul>
    </div>

{% endblock %}